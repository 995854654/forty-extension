{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "esModuleInterop": true,        
    "noImplicitThis": false,        
    "allowJs": true,
    "jsx": "preserve",

    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": [
      "dom"
    ]
    
  },
  "include": ["**/*.tsx", "**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
